<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" android:innerRadius="50dp" >
            <solid android:color="@color/colorBlue0"/>
            <stroke android:color="@color/colorGray" android:width="3dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:innerRadius="50dp" >
            <solid android:color="@color/colorBlue0"/>
            <stroke android:color="@color/colorGray" android:width="6dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>




</selector>