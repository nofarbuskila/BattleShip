<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".TutorialActivity">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        style="@style/tutorial_style"
        android:gravity="center"
        android:text="@string/ships_tab"/>

    <LinearLayout
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/section_label"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@id/txt4">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1 X "
            android:gravity="center"
            style="@style/tutorial_style"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/full_ship2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@id/txt4">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="2 X "
            android:gravity="center"
            style="@style/tutorial_style"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/full_ship3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@id/txt4">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1 X "
            android:gravity="center"
            style="@style/tutorial_style"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/full_ship4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt3"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1 X "
            android:gravity="center"
            style="@style/tutorial_style"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/full_ship5"/>
    </LinearLayout>

</RelativeLayout>
