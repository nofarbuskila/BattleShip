<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/build_profile_dialog_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_dialog"
            android:fontFamily="@font/audiowide"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:hint="@string/hint_dialog"
            android:fontFamily="@font/audiowide"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_margin="20dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/name_edit_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/camera_btn"/>

        <TextView
            android:id="@+id/camera_help_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_btn"
            android:layout_margin="10dp"
            android:textSize="15sp"/>

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/save_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:sparkbutton_activeImage="@drawable/v_btn_blue"
            app:sparkbutton_inActiveImage="@drawable/v_btn_white"
            app:sparkbutton_iconSize="40dp"
            app:sparkbutton_primaryColor="@color/colorBlue44"
            app:sparkbutton_secondaryColor="@color/colorWhiteOriginal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/camera_help_tv"/>

        <!--<Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/camera_help_tv"/>-->


    </RelativeLayout>



</RelativeLayout>