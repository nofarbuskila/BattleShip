<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/win_or_lose_dialog_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" >

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="290dp"
            android:layout_height="390dp"
            android:background="@drawable/stars"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/win_or_lose_tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/win_txt"
        android:textSize="26sp"
        android:layout_marginTop="105dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:textColor="@color/colorYellow1" />

    <TextView
        android:id="@+id/win_or_lose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/win_txt"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:textColor="@color/colorYellow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/winner_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/home_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/home_btn"
        android:layout_marginStart="50dp"
        android:layout_marginTop="350dp"/>

    <Button
        android:id="@+id/records_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/trophy_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="350dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:src="@drawable/trofee"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>