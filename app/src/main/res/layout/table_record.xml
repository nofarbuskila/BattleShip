<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/table_records_layout_layout">

    <LinearLayout
        android:id="@+id/titile_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/frame_bg">

        <TextView
            android:id="@+id/winner_position"
            android:layout_weight="0.3"
            style="@style/records_text_view"/>

        <TextView
            android:id="@+id/winner_name"
            android:layout_weight="1"
            style="@style/records_text_view"/>


        <TextView
            android:id="@+id/max_score"
            style="@style/records_text_view"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/player_game_time_tv"
            android:layout_weight="1"
            style="@style/records_text_view"/>

    </LinearLayout>

</LinearLayout>